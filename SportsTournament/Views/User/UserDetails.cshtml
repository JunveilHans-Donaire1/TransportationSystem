@model SportsTournament.Models.UserDetail
@{
    ViewData["Title"] = "User Details";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Details Form</title>

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #007bff, #00bcd4);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            color: #fff;
            margin: 0;
        }

        .card {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(15px);
            border-radius: 25px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 500px;
            padding: 2.5rem;
            position: relative;
        }

        h3 {
            text-align: center;
            margin-bottom: 1.8rem;
            font-weight: 700;
            letter-spacing: 1px;
        }

        .exit-btn {
            position: absolute;
            top: 15px;
            right: 20px;
            background: rgba(255, 255, 255, 0.2);
            color: #fff;
            text-decoration: none;
            font-size: 0.9rem;
            padding: 6px 14px;
            border-radius: 20px;
            transition: all 0.3s ease;
        }

            .exit-btn:hover {
                background: rgba(255, 255, 255, 0.4);
                transform: translateY(-2px);
            }

        .form-label {
            font-weight: 500;
            display: block;
            margin-bottom: 5px;
        }

        .form-control {
            width: 100%;
            padding: 10px 15px;
            margin-bottom: 1rem;
            border-radius: 30px;
            border: 1px solid rgba(255, 255, 255, 0.4);
            background: rgba(255, 255, 255, 0.2);
            color: #fff;
            transition: all 0.3s ease;
        }

            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.7);
            }

            .form-control:focus {
                outline: none;
                border-color: #fff;
                background: rgba(255, 255, 255, 0.3);
            }

        .btn-submit {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 30px;
            background: linear-gradient(90deg, #43a047, #66bb6a);
            color: #fff;
            font-weight: 600;
            cursor: pointer;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .btn-submit:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.25);
            }

        .text-danger {
            font-size: 0.9rem;
            color: #ff6b6b !important;
        }

        .text-success {
            font-size: 0.95rem;
            color: #d4edda;
            text-align: center;
            margin-bottom: 1rem;
            font-weight: 500;
        }
    </style>
</head>

<body>
    <div class="card">
        <a asp-controller="Auth" asp-action="Index" class="exit-btn">Exit</a>
        <h3>User Details</h3>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="text-success">@TempData["SuccessMessage"]</div>
        }

        <form asp-action="SubmitUser" method="post">
            <div>
                <label asp-for="FirstName" class="form-label">First Name</label>
                <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="MiddleName" class="form-label">Middle Name</label>
                <input asp-for="MiddleName" class="form-control" placeholder="Enter middle name" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="LastName" class="form-label">Last Name</label>
                <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Number" class="form-label">Phone Number</label>
                <input asp-for="Number" class="form-control" placeholder="Enter phone number" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Gmail" class="form-label">Gmail</label>
                <input asp-for="Gmail" type="email" class="form-control" placeholder="Enter email" />
                <span asp-validation-for="Gmail" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Address" class="form-label">Address</label>
                <textarea asp-for="Address" class="form-control" rows="2" placeholder="Enter your address"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-submit">Login</button>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
