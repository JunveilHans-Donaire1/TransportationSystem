@model SportsTournament.Models.Feedback

@{
    ViewData["Title"] = "Submit Feedback";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Submit Feedback</h4>
            <a asp-action="Router" asp-controller="Router" class="btn btn-primary">Back</a>
        </div>

        <div class="card-body">

            <form asp-action="Create" method="post">

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Message" class="form-label"></label>
                    <textarea asp-for="Message" rows="4" class="form-control"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rating" class="form-label">Rating (Optional)</label>
                    <select asp-for="Rating" class="form-select">
                        <option value="">-- Select Rating --</option>
                        <option value="1">⭐ 1 - Very Bad</option>
                        <option value="2">⭐⭐ 2 - Bad</option>
                        <option value="3">⭐⭐⭐ 3 - Average</option>
                        <option value="4">⭐⭐⭐⭐ 4 - Good</option>
                        <option value="5">⭐⭐⭐⭐⭐ 5 - Excellent</option>
                    </select>
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 mt-3">Submit Feedback</button>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
