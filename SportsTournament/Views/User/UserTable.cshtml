@model IEnumerable<SportsTournament.Models.UserDetail>

@{
    ViewData["Title"] = "My Details";
    var records = Model ?? Enumerable.Empty<SportsTournament.Models.UserDetail>();
}

<div class="container mt-5">
    <h2 class="text-center mb-4">My Details</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (!records.Any())
    {
        <p class="text-center">No details found for your account.</p>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="table-primary">
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Middle Name</th>
                    <th>Last Name</th>
                    <th>Number</th>
                    <th>Gmail</th>
                    <th>Address</th>
                    <th>Password</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in records)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.FirstName</td>
                        <td>@item.MiddleName</td>
                        <td>@item.LastName</td>
                        <td>@item.Number</td>
                        <td>@item.Gmail</td>
                        <td>@item.Address</td>
                        <td>@item.Password</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
