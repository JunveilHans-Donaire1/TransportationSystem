@model SportsTournament.Models.Records
@{
    ViewData["Title"] = "Transportation Booking System";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold text-primary">Transportation Booking System</h1>
        <p class="text-muted">Manage your records with ease</p>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info text-center">@TempData["Info"]</div>
    }


    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-body p-4">
            <form asp-action="Form" method="post">
                @* Hidden field for record ID *@
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Full Name</label>
                    <input class="form-control" asp-for="FullName" placeholder="Enter full name" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Type</label>
                    <select class="form-select" asp-for="Type">
                        <option value="">-- Select Type --</option>
                        <option value="Bus">Bus</option>
                        <option value="Van">Van</option>
                        <option value="Taxi">Taxi</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Passenger</label>
                    <input class="form-control" asp-for="Passenger" type="number" placeholder="Enter number of passengers" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Location</label>
                    <input class="form-control" asp-for="Location" placeholder="Enter pickup location" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Destination</label>
                    <select class="form-select" asp-for="Destination">
                        <option>Bien Unido-Trinidad</option>
                        <option>Bien Unido-Talibon</option>
                        <option>Bien Unido-Ubay</option>
                        <option>Trinidad-Bien Unido</option>
                        <option>Trinidad-Ubay</option>
                        <option>Trinidad-Talibon</option>
                        <option>Talibon-Bien Unido</option>
                        <option>Talibon-Ubay</option>
                        <option>Talibon-Trinidad</option>
                        <option>Ubay-Bien Unido</option>
                        <option>Ubay-Talibon</option>
                        <option>Ubay-Trinidad</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Status</label>
                    <input class="form-control" asp-for="Status" placeholder="Enter status (e.g., Pending, Confirmed)" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Username</label>
                    <input class="form-control" asp-for="Username" placeholder="Enter username" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Phone Number</label>
                    <input class="form-control" asp-for="PhoneNumber" placeholder="Enter your phone number" />
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button class="btn btn-primary px-4" type="submit">Submit</button>

               
                </div>


                <div class="text-end mt-3">
                    <a asp-action="Router" asp-controller ="Router" class="btn btn-outline-secondary px-4">Back</a>
                    <a asp-action="UserTable" asp-controller="User" class="btn btn-outline-secondary">Booking</a>

                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background: #f4f6f8;
        font-family: 'Segoe UI', sans-serif;
    }

    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

    input.form-control, select.form-select {
        border-radius: 10px;
        padding: 10px 12px;
    }

    button.btn-primary,
    .btn-warning,
    .btn-danger,
    a.btn-outline-secondary {
        border-radius: 10px;
        font-weight: 500;
        transition: 0.3s;
    }

        .btn-warning:hover {
            background-color: #f1c40f;
            color: #000;
        }

        .btn-danger:hover {
            background-color: #c0392b;
            color: white;
        }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: #fff;
    }
</style>
