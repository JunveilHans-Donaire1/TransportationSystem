@{
    ViewData["Title"] = "Verify Code";
}

<h2>Enter Verification Code</h2>

<form method="post" action="/Auth/VerifyCode">
    <div class="mb-3">
        <label>Verification Code</label>
        <input type="text" name="code" class="form-control" required maxlength="6" />
    </div>

    <button type="submit" class="btn btn-success">Verify</button>

    @if (ViewBag.Error != null)
    {
        <p class="text-danger mt-2">@ViewBag.Error</p>
    }
</form>

<p class="text-muted mt-3">Code was sent to: <strong>@ViewBag.Email</strong></p>
