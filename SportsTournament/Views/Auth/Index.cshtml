@model SportsTournament.ViewModels.AuthViewModel
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>JJGGR TBS</title>
    <link rel="stylesheet" href="~/css/Auth.css" />
</head>
<body>
    <div class="header">
        <img src="https://cdn-icons-png.flaticon.com/512/2966/2966327.png" alt="Logo">
        <h1>JJGGR Transportation Booking System</h1>
    </div>

    <div id="loadingOverlay">
        <div class="spinner"></div>
        <div class="loading-text">Loading Dashboard...</div>
    </div>

    <div class="card">
        <div class="card-body">
            <h3 id="form-title">Login</h3>

            <!-- LOGIN FORM -->
            <form id="loginForm" asp-action="Login" method="post" onsubmit="showLoading();">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Login.UsernameOrEmail" class="form-label">Username or Email</label>
                    <input asp-for="Login.UsernameOrEmail" class="form-control" placeholder="Enter username or email" />
                    <span asp-validation-for="Login.UsernameOrEmail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Login.Password" class="form-label">Password</label>
                    <input asp-for="Login.Password" type="password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="Login.Password" class="text-danger"></span>
                </div>

                <div class="d-grid mb-2">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>

                <!-- ✔ Added Forgot Password link -->
                <div class="text-center mb-2">
                    <a href="/Auth/ForgotPassword" class="text-decoration-none">Forgot Password?</a>
                </div>
                <!-- ✔ End -->

                <div class="text-center">
                    <small>Don’t have an account? <a href="javascript:void(0);" onclick="toggleForms('register')">Register here</a></small>
                </div>
            </form>

            <!-- REGISTER FORM -->
            <form id="registerForm" asp-action="Register" method="post" style="display:none;" onsubmit="showLoading();">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Register.Username" class="form-label">Username</label>
                    <input asp-for="Register.Username" class="form-control" placeholder="Choose username" />
                    <span asp-validation-for="Register.Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Register.Email" class="form-label">Email</label>
                    <input asp-for="Register.Email" class="form-control" placeholder="Choose Email" />
                    <span asp-validation-for="Register.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Register.Password" class="form-label">Password</label>
                    <input asp-for="Register.Password" type="password" class="form-control" placeholder="Create password" />
                    <span asp-validation-for="Register.Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Register.Role" class="form-label">Select Role</label>
                    <select asp-for="Register.Role" class="form-control" id="roleSelect" onchange="checkAdminRequest()">
                        <option value="User" selected>User</option>
                        <option value="Admin">Staff</option>
                    </select>

                    <small id="adminRequestMsg" class="text-info" style="display:none;">
                        Request to be Staff submitted. We will review your request.
                    </small>
                </div>

                <div class="d-grid mb-2">
                    <button type="submit" class="btn btn-success">Register</button>
                </div>

                <div class="text-center">
                    <small>Already have an account? <a href="javascript:void(0);" onclick="toggleForms('login')">Login here</a></small>
                </div>
            </form>

        </div>
    </div>

    <script>
        // Toggle forms (Login / Register only)
        function toggleForms(formType) {
            const login = document.getElementById('loginForm');
            const register = document.getElementById('registerForm');
            const title = document.getElementById('form-title');

            login.style.display = 'none';
            register.style.display = 'none';

            if (formType === 'register') {
                register.style.display = 'block';
                title.textContent = 'Register';
            } else {
                login.style.display = 'block';
                title.textContent = 'Login';
            }
        }

        // Show loading overlay
        function showLoading() {
            document.getElementById('loadingOverlay').style.display = 'flex';
            return true;
        }

        // Admin request message
        function checkAdminRequest() {
            const roleSelect = document.getElementById("roleSelect");
            const message = document.getElementById("adminRequestMsg");
            message.style.display = roleSelect.value === "Admin" ? "block" : "none";
        }
    </script>
</body>
</html>
