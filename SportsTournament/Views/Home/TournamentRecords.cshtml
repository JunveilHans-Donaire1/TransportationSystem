@model IEnumerable<SportsTournament.Models.Records>

@{
    ViewData["Title"] = "Booking Records";
}

<style>
    /* Page layout */
    body {
        background-color: #f8fafc;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        text-align: center;
        color: #0d6efd;
        font-weight: 700;
        margin-top: 30px;
    }

    p {
        text-align: center;
        font-size: 1.1rem;
        color: #495057;
    }

    /* Table styling */
    table {
        background-color: #ffffff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    thead {
        background-color: #0d6efd;
        color: white;
    }

    th, td {
        text-align: center;
        padding: 12px 15px;
        vertical-align: middle;
    }

    tbody tr:nth-child(even) {
        background-color: #f2f6fc;
    }

    tbody tr:hover {
        background-color: #e9f2ff;
        transition: 0.2s ease-in-out;
    }

    /* Button styling */
    .btn {
        border-radius: 6px;
        font-weight: 600;
        padding: 6px 12px;
        margin: 2px;
    }

    .btn-success {
        background-color: #198754;
        border: none;
    }

        .btn-success:hover {
            background-color: #157347;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background-color: #bb2d3b;
        }

    .btn-primary {
        display: block;
        width: 200px;
        margin: 20px auto;
        border: none;
        border-radius: 6px;
        background-color: #0d6efd;
        font-weight: 600;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
        }

    /* Alert message styling */
    .alert {
        text-align: center;
        width: 60%;
        margin: 20px auto;
        border-radius: 8px;
    }
</style>

<h2>Transportation Booking</h2>
<p>List of Bookings: @ViewBag.TotalRecords</p>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Full Name</th>
            <th>Type</th>
            <th>Passenger</th>
            <th>Location</th>
            <th>Destination</th>
            <th>Status</th>
            <th>Username</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.Id</td>
                <td>@record.FullName</td>
                <td>@record.Type</td>
                <td>@record.Passenger</td>
                <td>@record.Location</td>
                <td>@record.Destination</td>
                <td>@record.Status</td>
                <td>@record.Username</td>
                <td>@record.PhoneNumber</td>
                
                <td>
                    <form asp-action="AcceptRecord" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@record.Id" />
                        <button type="submit" class="btn btn-sm btn-success"
                                onclick="return confirm('Accept this booking?')">
                            Accept
                        </button>
                    </form>

                    <form asp-action="RejectRecord" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@record.Id" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Reject this booking?')">
                            Reject
                        </button>
                    </form>

                    <form asp-action="DeleteRecord" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@record.Id" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this record?')">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" asp-controller="Home" class="btn btn-primary">Exit</a>
