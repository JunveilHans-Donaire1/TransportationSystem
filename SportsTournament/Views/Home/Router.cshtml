@{
    Layout = null;
    ViewData["Title"] = "Router Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <style>
        /* === Animated Background === */
        body {
            margin: 0;
            font-family: 'Poppins', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #007bff, #00c6ff, #6dd5fa);
            background-size: 200% 200%;
            animation: gradientShift 10s ease infinite;
            color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            overflow: hidden;
        }

        /* ✅ Double @@ to escape Razor syntax */
        @@keyframes gradientShift {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        .btn-exit {
            position: absolute;
            top: 25px;
            left: 25px;
            background-color: #ff4757;
            color: #fff;
            padding: 10px 22px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(255, 71, 87, 0.4);
        }

            .btn-exit:hover {
                background-color: #e63946;
                transform: scale(1.07);
                box-shadow: 0 6px 16px rgba(255, 71, 87, 0.6);
            }

        .router-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border-radius: 25px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            padding: 50px 60px;
            max-width: 800px;
            width: 90%;
            text-align: center;
            animation: fadeInUp 0.8s ease;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .router-card h2 {
            font-weight: 700;
            font-size: 2rem;
            color: #007bff;
            margin-bottom: 10px;
        }

        .router-card p {
            font-size: 1.05rem;
            line-height: 1.8;
            color: #555;
            margin-bottom: 40px;
        }

        .dashboard-buttons {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .btn-dashboard {
            position: relative;
            background: linear-gradient(135deg, #007bff, #00bcd4);
            color: white;
            padding: 15px 40px;
            border-radius: 35px;
            font-size: 1.1rem;
            font-weight: 600;
            text-decoration: none;
            box-shadow: 0 6px 15px rgba(0, 123, 255, 0.3);
            transition: all 0.3s ease;
            overflow: hidden;
        }

            .btn-dashboard::after {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: rgba(255, 255, 255, 0.3);
                transition: all 0.4s ease;
            }

            .btn-dashboard:hover::after {
                left: 100%;
            }

            .btn-dashboard:hover {
                transform: translateY(-3px) scale(1.03);
                box-shadow: 0 8px 20px rgba(0, 123, 255, 0.5);
            }

        @@media (max-width: 768px) {
            .router-card

        {
            padding: 35px 30px;
        }

        .btn-dashboard {
            width: 100%;
            text-align: center;
        }

        .btn-exit {
            padding: 8px 18px;
            font-size: 0.9rem;
        }

        }
    </style>

</head>

<body>
    <a asp-action="Index" asp-controller="Home" class="btn-exit">⏎ Exit</a>

    <div class="router-card">
        <h2>Welcome, @ViewBag.Username!</h2>
        <p>
            The <strong>Transportation Booking System</strong> makes traveling easier by allowing users
            to reserve rides quickly and conveniently. It ensures organized, safe, and timely travel
            for all passengers — providing efficiency and reliability for everyone.
        </p>

        <div class="dashboard-buttons">
            <a asp-action="SportsTournament" asp-controller="Home" class="btn-dashboard">🚗 Book Ride</a>
            <a asp-action="Inbox" asp-controller="Home" class="btn-dashboard">🔔 Notifications</a>
        </div>
    </div>
</body>
</html>
