@model SportsTournament.ViewModels.AdminDetail
@{
    ViewData["Title"] = "Admin Details";
}

<style>
    body {
        background-color: #f5f6fa;
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
    }

    .container-box {
        max-width: 400px;
        margin: 80px auto;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        padding: 25px 30px;
    }

    h2 {
        text-align: center;
        font-weight: 600;
        color: #2d3436;
        margin-bottom: 20px;
    }

    label {
        font-weight: 500;
        margin-bottom: 5px;
        display: inline-block;
    }

    input.form-control {
        width: 100%;
        padding: 8px 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        margin-bottom: 10px;
        transition: border-color 0.2s ease;
    }

        input.form-control:focus {
            border-color: #0984e3;
            outline: none;
        }

    .btn-primary {
        background-color: #0984e3;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px;
        width: 100%;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #74b9ff;
        }

    .btn-btn-primary {
        display: inline-block;
        background-color: #636e72;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        padding: 6px 12px;
        margin-bottom: 15px;
        transition: background-color 0.2s ease;
    }

        .btn-btn-primary:hover {
            background-color: #b2bec3;
        }

    .text-success {
        text-align: center;
        color: #00b894;
        margin-bottom: 10px;
    }

    .text-danger {
        font-size: 13px;
        color: #d63031;
    }
</style>

<div class="container-box">
    <a asp-action="Index" class="btn-btn-primary">Exit</a>
    <h2>Admin Details</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="text-success">@TempData["SuccessMessage"]</div>
    }

    <form asp-action="SubmitAdmin" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Number"></label>
            <input asp-for="Number" class="form-control" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-primary">Submit</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
